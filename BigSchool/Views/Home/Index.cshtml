@model IEnumerable<BigSchool.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Khai</h2>
<div class="row">
    <ul class="course">
        @foreach (var course in Model)
         {
            <li>
                <div>
                    @course.DateTime.ToString("dd/MM/yyy HH:mm")-@course.Name
                </div>
                <div class="details">
                    <span class="lecture">@course.Name</span>
                    <span class="category">@course.Category.Name</span>
                </div>
                
            </li>
         }
    </ul>

</div>
